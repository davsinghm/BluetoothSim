<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorAccent">@color/red500</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="KeypadButton.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="KeypadButtonText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#8A000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="KeypadButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#8A000000</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="TextAppearanceDialerButton" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearanceDialerButton.Disabled">
        <item name="android:textColor">@color/colorDisabled</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
